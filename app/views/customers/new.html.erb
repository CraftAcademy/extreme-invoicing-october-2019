<%= form_with model: @customer do |form| %>
    <%= form.label :name %>
    <%= form.text_field :name %>
    <%= form.label :organisation_number %>
    <%= form.text_field :organisation_number %>
    <%= form.label :address %>
    <%= form.text_field :address %>
    <%= form.label :postcode %>
    <%= form.text_field :postcode %>
    <%= form.label :city %>
    <%= form.text_field :city %>
    <%= form.submit "Add customer" %>
<% end %>