<%= form_with model: @invoice do |form| %>
  <h2>Invoice</h2>
  <%= form.label :invoice_number %>
  <%= form.text_field :invoice_number, value: @invoice.invoice_number %>
  <%= form.label :date %>
  <%= form.text_field :date, value: @invoice.date %>
  <%= form.label :due_date %>
  <%= form.text_field :due_date, value: @invoice.due_date %>
  
  <h2>Customer</h2>
  <%= form.label :customer %>
  <%= form.select :customer, current_user.customers.collect { |customer| [customer.name, customer.id] } %>
  
  <h2>Articles</h2>
  <%= form.label :item %>
  <%= form.text_field :item %>
  <%= form.label :quantity %>
  <%= form.text_field :quantity %>
  <%= form.label :unit %>
  <%= form.text_field :unit %>
  <%= form.label :unit_price %>
  <%= form.text_field :unit_price %>
  <%= form.label :vat, 'VAT' %>
  <%= form.text_field :vat %>

  <%= form.submit 'Save draft' %>
<% end %> 
  Total incl. VAT <%= number_to_currency @invoice.total, separator: ",", format: "%n %u", unit: '', delimiter: ' ' %>
<% if @total %>
<% end %>


