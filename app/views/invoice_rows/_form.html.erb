<%= form_with url: invoice_rows_path, scope: :row, id: :row_form, local: false do |row_form| %>
  <%= row_form.label :article_id, 'Article' %>
  <%= row_form.select :article_id, current_user.articles.collect { |article| [article.name, article.id] } %>
  <%= row_form.label :quantity %>
  <%= row_form.text_field :quantity %>
  <%= row_form.label :unit %>
  <%= row_form.text_field :unit %>
  <%= row_form.label :unit_price %>
  <%= row_form.text_field :unit_price %>
  <%= row_form.label :vat, 'VAT' %>
  <%= row_form.text_field :vat %>
  <%= row_form.submit 'Save row'%>
<% end %>

